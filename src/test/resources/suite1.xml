<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Sum and Subtract" verbose="1">

  <test name="Sum">
    <groups>
      <define name="sum-group">
        <include name="sum" />
      </define>
      <run>
        <include name="sum-group"/>
      </run>
    </groups>
<!--    <packages>-->
<!--      <package name="com.epam.tc"/>-->
<!--    </packages>-->
    <classes>
      <class name="com.epam.tc.SumTest"/>
    </classes>
  </test>

  <test name="Subtract">
    <groups>
      <define name="subtract-group">
        <include name="subtract"/>
      </define>
      <run>
        <include name="subtract-group"/>
      </run>
    </groups>
    <packages>
      <package name="com.epam.tc"/>
    </packages>
  </test>

</suite>


